# Routes file

GET           /                                      controllers.HomeController.index()
GET           /versioning                            controllers.HomeController.versioning()

# DOI operations
GET           /dois                                  controllers.DoiController.index()
GET           /dois/:prefix/:suffix                  controllers.DoiController.get(prefix: String, suffix: String)
+nocsrf
POST          /dois                                  controllers.DoiController.register()
+nocsrf
PUT           /dois/:prefix/:suffix                  controllers.DoiController.update(prefix: String, suffix: String)
+nocsrf
DELETE        /dois/:prefix/:suffix                  controllers.DoiController.delete(prefix: String, suffix: String)
POST          /dois/:prefix/:suffix/tombstone        controllers.DoiController.tombstone(prefix: String, suffix: String)
DELETE        /dois/:prefix/:suffix/tombstone        controllers.DoiController.deleteTombstone(prefix: String, suffix: String)



# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                          controllers.Assets.versioned(path="/public", file: Asset)
